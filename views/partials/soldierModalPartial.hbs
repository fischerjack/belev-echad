<div class="modal fade" id="{{camelCaseName}}Modal" tabindex="-1" role="dialog" aria-labelledby="{{camelCaseName}}ModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="{{camelCaseName}}ModalLabel">Profile - {{firstName}} {{lastName}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <img class="intro-image m-2 rounded" src="{{image}}" alt="">
        <h4 class="m-2">{{firstName}} {{lastName}}</h4>
        <p class="m-2">
          {{summary}}
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>