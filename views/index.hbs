            {{> soldierPartial this}}
            {{#if_odd @index}}
              <div class="w-100"></div>    
            {{/if_odd}}
          {{/each}}
        </div>
      </div>
    </div>

    <div class="col-6">
      <h3 class="text-center underline pt-5">Create and Feel the Impact on Our 2019 Soldiers</h3>
      <div class="container-fluid">
        <div class="row text-center justify-content-center">
